{
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"push": false
	},
	"github": {
		"release": false
	},
	"hooks": {
		"after:git:release": "echo Successfully created release v${version}."
	},
	"npm": {
		"publish": false
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "angular",
			"infile": "CHANGELOG.md"
		}
	}
}
